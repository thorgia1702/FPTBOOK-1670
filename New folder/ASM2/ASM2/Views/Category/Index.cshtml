@model IEnumerable<ASM2.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-uppercase">Category</h1>

<p>
    <button type="button" class="btn btn-primary"><a asp-action="Create" style="text-decoration: none;color:white">Create New</a></button>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <button type="button" class="btn btn-warning"><a style="text-decoration: none;color:white" asp-action="Edit" asp-route-id="@item.CategoryId">  Edit  </a></button>
                    <button type="button" class="btn btn-success"><a style="text-decoration: none;color:white" asp-action="Details" asp-route-id="@item.CategoryId">Details</a></button>
                    <button type="button" class="btn btn-danger"><a style="text-decoration: none;color:white" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
